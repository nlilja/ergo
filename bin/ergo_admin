#!/usr/bin/python
# -*- coding: utf-8 -*-


"""
ERGO
Administrator console
"""


import sys

from ergo import init, show_error, show_help, ErgoError


def main(argv = []):
    """
    Launcher.
    """
    
    # Initialize
    try:
        args = init(argv)
    except ErgoError, error:
        if error.message:
            return show_error(error.message)
        else:
            return show_help("ergo_admin")
    
    # TODO: ...
    
    return 0


if __name__ == "__main__":
    status = main(sys.argv[1:])
    sys.exit(status)
